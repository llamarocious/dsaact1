#include <iostream>
#include <stdio.h>
using namespace std;


int arr[20] = {3, 54, 87, 38, 6, 65, 30, 24, 98, 5, 55, 12, 78, 34, 63, 49, 56, 63, 25, 47};

int main() {
	int k, ans=-1;
	
	cout << "Enter element: ";
    cin >> k;
    for(int i=0;i<20;i++)
    {
        if(arr[i]==k)
        {
            ans=i;
            break;
        }
    }
    
    if(ans!=-1)
    	cout<<"The element "<<k<<" is present at index "<<ans;
    
    else
    	cout<<"The element "<<k<<" is not there in the array";
    
    return 0;
}
